<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Spring.FX.controllers.ProductoController">

    <top>
        <HBox alignment="CENTER" >
            <Label text="Gestión de Productos" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
        </HBox>
    </top>



    <center>
        <VBox spacing="10" style="-fx-padding: 10;">
            <TableView fx:id="productosTable"  VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colNombre" text="Nombre" prefWidth="610"/>
                    <TableColumn fx:id="colPrecio" text="Precio" prefWidth="610"/>
                    <TableColumn fx:id="colCantidad" text="Cantidad" prefWidth="610"/>
                </columns>
            </TableView>

            <HBox spacing="40" alignment="CENTER">
                <Button text="Nuevo" onAction="#nuevoProducto" style="-fx-font-weight: bold;"/>
                <Button text="Editar" onAction="#editarProducto" style="-fx-font-weight: bold;"/>
                <Button text="Eliminar" onAction="#eliminarProducto" style="-fx-font-weight: bold; -fx-text-fill: red;"/>

            </HBox>
            <HBox>
                <Button text="← Volver a Ventas"
                        onAction="#volverAVentas"
                        styleClass="button-secondary"/>
            </HBox>

        </VBox>
    </center>

    <bottom>
        <Label fx:id="mensajeLabel" style="-fx-text-fill: blue; -fx-padding: 10;"/>
    </bottom>
</BorderPane>
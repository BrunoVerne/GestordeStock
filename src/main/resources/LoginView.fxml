<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/8.0.171"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="Spring.FX.controllers.LoginController"
      spacing="10" alignment="CENTER"
      style="-fx-padding: 20;">

    <Label text="Inicio de Sesión" style="-fx-font-size: 18; -fx-font-weight: bold;"/>

    <TextField fx:id="emailField" promptText="Email"/>
    <PasswordField fx:id="passwordField" promptText="Contraseña"/>

    <Button text="Ingresar" onAction="#handleLogin" defaultButton="true"/>

    <Label text="¿No tienes cuenta?"/>
    <Button text="Registrarse" onAction="#handleRegister"/>

    <Label fx:id="errorLabel" style="-fx-text-fill: red;"/>
</VBox>
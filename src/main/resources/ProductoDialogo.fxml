<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<DialogPane xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Spring.FX.controllers.ProductoDialogoController">


    <content>
        <GridPane hgap="10" vgap="10">
            <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>


            <!-- Campo Nombre -->
            <Label text="Nombre:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="nombreField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <!-- Campo Precio -->
            <Label text="Precio:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="precioField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <!-- Campo Cantidad -->
            <Label text="Cantidad:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <TextField fx:id="cantidadField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
        </GridPane>
    </content>

    <buttonTypes>
        <ButtonType text="Guardar" buttonData="OK_DONE"/>
        <ButtonType text="Cancelar" buttonData="CANCEL_CLOSE"/>
    </buttonTypes>
</DialogPane>
<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/8.0.171"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="Spring.FX.controllers.RegisterController"
      spacing="10"
      alignment="CENTER"
      style="-fx-padding: 20;">

    <Label text="Registro" style="-fx-font-size: 18; -fx-font-weight: bold;"/>

    <!-- Nuevo campo para el nombre -->
    <TextField fx:id="nombreField" promptText="Nombre"/>
    <TextField fx:id="emailField" promptText="Email"/>
    <PasswordField fx:id="passwordField" promptText="Contraseña"/>
    <PasswordField fx:id="confirmPasswordField" promptText="Confirmar Contraseña"/>

    <Button text="Registrarse" onAction="#handleRegister"/>
    <Label fx:id="errorLabel" style="-fx-text-fill: red;"/>
</VBox>
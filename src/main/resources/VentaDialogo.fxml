<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Spring.FX.controllers.VentaDialogoController"
            prefWidth="600" prefHeight="400">

    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <top>
        <Label text="Nueva Venta" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
    </top>

    <center>
        <VBox spacing="10">
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Seleccionar Producto:"/>
                <ComboBox fx:id="productoComboBox" prefWidth="200"/>
                <Button fx:id="agregarButton" text="Agregar" onAction="#agregarProducto"/>
            </HBox>

            <Label text="Productos en la venta:"/>
            <ListView fx:id="productosListView" prefHeight="200"/>

            <HBox spacing="10" alignment="CENTER_RIGHT">
                <Label fx:id="totalLabel" text="Total: $0.00" style="-fx-font-weight: bold;"/>
                <Button fx:id="removerButton" text="Remover Seleccionado" onAction="#removerProducto"/>
            </HBox>
        </VBox>
    </center>

    <bottom>
        <HBox spacing="10" alignment="CENTER_RIGHT">
            <Button fx:id="crearVentaButton" text="Crear Venta" onAction="#crearVenta"
                    style="-fx-font-weight: bold; -fx-background-color: #4CAF50; -fx-text-fill: white;"/>
            <Button fx:id="cancelarButton" text="Cancelar" onAction="#cancelar"
                    style="-fx-font-weight: bold; -fx-background-color: #f44336; -fx-text-fill: white;"/>
        </HBox>
    </bottom>
</BorderPane>